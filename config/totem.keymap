#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>

#define Base        0
#define Nav         1
#define Sym         2
#define Fun         3
#define Game        4
#define Gameplus    5

&mt {
    quick-tap-ms = <100>;
    global-quick-tap;
    flavor = "tap-preferred";
    tapping-term-ms = <170>;
};

&lt {
    tapping-term-ms = <240>;
    flavor = "balanced";
    quick-tap-ms = <150>;
};

/ {
    behaviors {
        hm: homerow_mods {
            compatible = "zmk,behavior-hold-tap";
            label = "HOMEROW_MODS";
            #binding-cells = <2>;
            flavor = "tap-preferred";
            tapping-term-ms = <200>;
            quick-tap-ms = <125>;
            global-quick-tap;
            bindings = <&kp>, <&kp>;
        };
    };

    combos {
        compatible = "zmk,combos";

        escape {
            bindings = <&lt 0 ESCAPE>;
            key-positions = <0 1>;
        };

        backspace {
            bindings = <&kp BACKSPACE>;
            key-positions = <4 3>;
        };

        backspace-2 {
            bindings = <&kp BACKSPACE>;
            key-positions = <5 6>;
        };

        zero {
            bindings = <&kp NUMBER_0>;
            key-positions = <23 22>;
            layers = <3>;
        };
    };

    macros {
        eksponent: eksponent {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&macro_tap>, <&kp CARET>;

            label = "EKSPONENT";
        };
    };

    keymap {
        compatible = "zmk,keymap";

        Base {
            display-name = "Base";
            bindings = <
              &kp Q       &kp W       &kp E        &kp R         &kp T        &kp Y      &kp U        &kp I           &kp O           &kp P
              &hm LGUI A  &hm LALT S  &hm LCTRL D  &hm LSHIFT F  &kp G        &kp H      &hm RSHFT J  &hm RCTRL K     &hm RALT L      &hm RGUI LEFT_BRACKET
&kp LEFT_WIN  &kp Z       &kp X       &kp C        &kp V         &kp B        &kp N      &kp M        &kp SEMICOLON   &kp APOSTROPHE  &kp COMMA              &kp DOT
                                      &to 3        &lt 1 TAB     &kp SPACE    &kp ENTER  &lt 2 BSPC   &kp LEFT_SHIFT
            >;
        };

        Nav {
            display-name = "Nav";
            bindings = <
        &kp LG(NUMBER_1)  &kp LG(NUMBER_2)   &kp LG(NUMBER_3)  &kp LG(NUMBER_4)      &kp LG(NUMBER_5)    &kp PAGE_UP    &kp K_VOLUME_UP    &kp C_FF               &kp C_NEXT  &to 4
        &kp LG(S)         &mt LEFT_ALT LEFT  &mt LCTRL UP      &mt LEFT_SHIFT RIGHT  &kp LG(T)           &kp HOME       &kp K_MUTE         &kp C_SHUFFLE          &kp C_PREV  &trans
&trans  &trans            &kp LG(W)          &kp DOWN          &kp LG(J)             &kp LG(O)           &kp PAGE_DOWN  &kp K_VOLUME_DOWN  &kp C_RW               &trans      &trans  &trans
                                             &trans            &trans                &trans              &kp K_PREV     &kp K_PP           &mt LEFT_SHIFT K_NEXT
            >;
        };

        Sym {
            display-name = "Sym";
            bindings = <
                &kp EXCL  &kp AT  &kp HASH  &kp DOLLAR  &kp PERCENT    &kp CARET  &kp AMPERSAND  &kp KP_ASTERISK  &kp SQT  &kp DQT
                &trans    &trans  &trans    &trans      &trans         &trans     &trans         &trans           &trans   &trans
&studio_unlock  &trans    &trans  &trans    &trans      &trans         &kp UNDER  &kp EQUAL      &trans           &trans   &kp SLASH  &kp HOME
                                  &trans    &trans      &trans         &trans     &trans         &trans
            >;
        };

        numpad {
            bindings = <
              &kp LS(NUMBER_7)  &kp N7  &kp N8  &kp N9     &kp KP_MINUS    &kp LT                    &kp GREATER_THAN  &trans  &trans  &trans
              &kp KP_MULTIPLY   &kp N4  &kp N5  &kp N6     &kp KP_PLUS     &kp LS(LEFT_PARENTHESIS)  &kp LS(RPAR)      &trans  &trans  &trans
&kp KP_EQUAL  &eksponent        &kp N1  &kp N2  &kp N3     &kp DOT         &kp LBKT                  &kp RBKT          &trans  &trans  &kp LBRC  &kp RBRC
                                        &to 0   &lt 1 TAB  &kp SPACE       &kp RET                   &lt 2 BACKSPACE   &trans
            >;
        };

        Gaming {
            display-name = "Game";
            bindings = <
       &kp TAB    &kp Q  &kp Z         &kp E  &kp R        &kp LS(PRINTSCREEN)  &kp PRINTSCREEN  &trans      &trans  &to 0
       &kp LSHFT  &kp A  &kp W         &kp D  &kp F        &trans               &trans           &trans      &trans  &trans
&kp B  &kp LCTRL  &kp X  &kp S         &kp C  &kp V        &trans               &trans           &trans      &trans  &trans  &trans
                         &kp LEFT_ALT  &kp M  &kp SPACE    &kp K_PREV           &kp K_PP         &kp K_NEXT
            >;
        };

        game2 {
            display-name = "Game";
            bindings = <
       &kp NUMBER_1  &kp NUMBER_2  &kp NUMBER_3  &kp NUMBER_4  &kp NUMBER_5    &kp LS(PRINTSCREEN)  &kp PRINTSCREEN  &trans      &trans  &to 0
       &kp LSHFT     &kp A         &kp W         &kp D         &kp NUMBER_6    &trans               &trans           &trans      &trans  &trans
&kp B  &kp LCTRL     &kp X         &kp S         &kp C         &kp NUMBER_7    &trans               &trans           &trans      &trans  &trans  &trans
                                   &kp LEFT_ALT  &lt 5 M       &kp SPACE       &kp K_PREV           &kp K_PP         &kp K_NEXT
            >;
        };
    };
};
